<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>
        <%= category.name %> Cars
    </title>
    <link rel="stylesheet" href="/styles/cars.css">
</head>

<body>

    <div class="container">

        <a href="/" class="back-link">‚Üê Back to Categories</a>

        <h1 class="page-title">
            <%= category.name %> Cars
        </h1>
        <p class="category-description">
            <%= category.description %>
        </p>

        <button class="add-btn" onclick="openModal('add')">+ Add New Car</button>

        <div class="card-grid">
            <% if (cars.length===0) { %>
                <p>No cars found in this category.</p>
                <% } %>

                    <% cars.forEach(car=> { %>
                        <div class="card" data-id="<%= car.id %>" data-name="<%= car.name %>"
                            data-brand="<%= car.brand %>" data-price="<%= car.price %>"
                            data-description="<%= car.description %>">
                            <h2 class="card-title">
                                <%= car.name %>
                            </h2>
                            <p class="card-brand"><strong>Brand:</strong>
                                <%= car.brand %>
                            </p>
                            <p class="card-price">$<%= car.price %>
                            </p>
                            <p class="card-description">
                                <%= car.description %>
                            </p>

                            <div class="card-actions">
                                <button class="edit-btn" onclick="openModal('edit', <%= car.id %>)">Edit</button>

                                <form action="/cars/<%= car.id %>/delete" method="POST" style="display:inline">
                                    <input type="hidden" name="category_id" value="<%= category.id %>">
                                    <button type="submit" class="delete-btn">Delete</button>
                                </form>
                            </div>
                        </div>
                        <% }) %>
        </div>
    </div>

    <!-- Modal Overlay -->
    <div id="modal-overlay" class="modal-overlay" onclick="closeModal(event)">
        <div class="modal-content">
            <h2 id="modal-title">Add Car</h2>
            <form id="modal-form" method="POST">
                <input type="hidden" name="category_id" id="car-category-id" value="<%= category.id %>">
                <input type="text" name="name" id="car-name" placeholder="Car Name" required>
                <input type="text" name="brand" id="car-brand" placeholder="Brand" required>
                <input type="number" step="0.01" name="price" id="car-price" placeholder="Price" required>
                <textarea name="description" id="car-description" placeholder="Description"></textarea>

                <div class="form-actions">
                    <button type="submit" class="save-btn">Save</button>
                    <button type="button" class="cancel-btn" onclick="closeModal()">Cancel</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        const modal = document.getElementById('modal-overlay');
        const modalTitle = document.getElementById('modal-title');
        const modalForm = document.getElementById('modal-form');
        const carIdInput = document.getElementById('car-id');
        const carNameInput = document.getElementById('car-name');
        const carBrandInput = document.getElementById('car-brand');
        const carPriceInput = document.getElementById('car-price');
        const carDescInput = document.getElementById('car-description');
        const carCategoryIdInput = document.getElementById('car-category-id');
        carCategoryIdInput.value = "<%= category.id %>";

        function openModal(type, id = null) {
            modal.style.display = 'flex';
            if (type === 'add') {
                modalTitle.textContent = 'Add New Car';
                modalForm.action = `/category/<%= category.id %>/cars`;
                carIdInput.value = '';
                carNameInput.value = '';
                carBrandInput.value = '';
                carPriceInput.value = '';
                carDescInput.value = '';
            } else if (type === 'edit') {
                const card = document.querySelector(`.card[data-id='${id}']`);

                modalTitle.textContent = 'Edit Car';
                modalForm.action = `/cars/${id}/update`;

                carIdInput.value = card.dataset.id;
                carNameInput.value = card.dataset.name;
                carBrandInput.value = card.dataset.brand;
                carPriceInput.value = card.dataset.price;
                carDescInput.value = card.dataset.description;
            }
        }

        function closeModal(e) {
            if (!e || e.target === modal) {
                modal.style.display = 'none';
            }
        }
    </script>

</body>

</html>
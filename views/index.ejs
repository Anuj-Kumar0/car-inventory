<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Car Categories</title>
    <link rel="stylesheet" href="styles/categories.css">
</head>

<body>

    <div class="container">
        <h1 class="page-title">Car Categories</h1>

        <button class="add-btn" onclick="openAddModal()">
            + Add New Category
        </button>

        <div class="card-grid">
            <% if (categories.length===0) { %>
                <p>No categories found</p>
                <% } else { %>
                    <% categories.forEach(category=> { %>
                        <div class="card">
                            <a href="/category/<%= category.id %>" class="card-link">
                                <h2 class="card-title">
                                    <%= category.name %>
                                </h2>
                                <p class="card-description">
                                    <%= category.description %>
                                </p>
                            </a>
                            <div class="card-actions">
                                <button class="edit-btn"
                                    onclick="openEditModal('<%= category.id %>', '<%= category.name %>', '<%= category.description %>')">Edit</button>
                                <button class="delete-btn"
                                    onclick="openDeleteModal('<%= category.id %>')">Delete</button>
                            </div>
                        </div>
                        <% }) %>
                            <% } %>
        </div>
    </div>

    <div id="modal-overlay" class="modal-overlay" onclick="closeModal(event)">
        <div class="modal-content">
            <h2 id="modal-title">Add Category</h2>
            <form id="modal-form" method="POST">
                <input type="text" name="name" id="modal-name" placeholder="Category Name" required>
                <textarea name="description" id="modal-description" placeholder="Description" required></textarea>
                <input type="password" name="adminPassword" placeholder="Admin Password" required>
                <div class="form-actions">
                    <button type="submit" class="save-btn">Save</button>
                    <button type="button" class="cancel-btn" onclick="closeModal()">Cancel</button>
                </div>
            </form>
        </div>
    </div>

    <div id="delete-modal-overlay" class="modal-overlay" onclick="closeDeleteModal(event)">
        <div class="modal-content">
            <h2>Confirm Delete</h2>
            <p>Are you sure you want to delete this category?</p>
            <div class="form-actions">
                <form id="delete-form" method="POST">
                    <input type="password" name="adminPassword" placeholder="Admin Password" required>
                    <button type="submit" class="delete-btn">Delete</button>
                </form>
                <button type="button" class="cancel-btn" onclick="closeDeleteModal()">Cancel</button>
            </div>
        </div>
    </div>

    <script>
        const modal = document.getElementById('modal-overlay');
        const deleteModal = document.getElementById('delete-modal-overlay');
        const modalTitle = document.getElementById('modal-title');
        const modalForm = document.getElementById('modal-form');
        const modalName = document.getElementById('modal-name');
        const modalDescription = document.getElementById('modal-description');
        const deleteForm = document.getElementById('delete-form');

        function openAddModal() {
            modalTitle.textContent = "Add Category";
            modalForm.action = "/";
            modalName.value = "";
            modalDescription.value = "";
            modal.style.display = 'flex';
        }

        function openEditModal(id, name, description) {
            modalTitle.textContent = "Edit Category";
            modalForm.action = `/${id}/update`;
            modalName.value = name;
            modalDescription.value = description;
            modal.style.display = 'flex';
        }

        function closeModal(e) {
            if (!e || e.target === modal) modal.style.display = 'none';
        }

        function openDeleteModal(id) {
            deleteForm.action = `/${id}/delete`;
            deleteModal.style.display = 'flex';
        }

        function closeDeleteModal(e) {
            if (!e || e.target === deleteModal) deleteModal.style.display = 'none';
        }
    </script>

</body>

</html>